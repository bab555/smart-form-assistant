# ========== 服务器配置 ==========
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true
LOG_LEVEL=info

# ========== 阿里云凭证 ==========
# 您提供的 DashScope API Key (用于 LLM 和 Embedding)
ALIYUN_ACCESS_KEY_ID=sk-79751b2cf9da4e81a0893d5082cc2284
# 注意：如果 OCR/ASR 接口报错，可能需要专门的 RAM AccessKeySecret
ALIYUN_ACCESS_KEY_SECRET=

# ========== 阿里云 DashScope (LLM) ==========
# 主控大模型（推理能力强）
ALIYUN_LLM_MODEL_MAIN=qwen-max
# 校对大模型（速度快）
ALIYUN_LLM_MODEL_CALIBRATION=qwen-turbo
# 多模态模型
ALIYUN_VL_MODEL=qwen-vl-plus
# Embedding 模型
ALIYUN_EMBEDDING_MODEL=text-embedding-v2

# ========== 阿里云 OCR 配置 ==========
ALIYUN_OCR_ENDPOINT=ocr-api.cn-hangzhou.aliyuncs.com
ALIYUN_OCR_REGION=cn-hangzhou

# ========== 阿里云 ASR 配置 ==========
ALIYUN_ASR_APP_KEY=
ALIYUN_ASR_ENDPOINT=nls-gateway-cn-shanghai.aliyuncs.com

# ========== MySQL 配置（Mock 模式下仅占位） ==========
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=smart_form_db

# ========== 向量数据库配置 ==========
FAISS_INDEX_PATH=./data/vector_store.index
FAISS_METADATA_PATH=./data/metadata.pkl

# ========== 业务配置 ==========
# 置信度阈值
CONFIDENCE_THRESHOLD_HIGH=0.85
CONFIDENCE_THRESHOLD_LOW=0.60
# 歧义判定阈值（Top2 相似度差值）
AMBIGUITY_THRESHOLD=0.10

# ========== CORS 配置 ==========
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ========== 日志配置 ==========
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION=100 MB
LOG_RETENTION=30 days

